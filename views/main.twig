{% extends "__layout.twig" %}
{% from "button.twig" import btn %}

{% block content %}
    <div class="row row-cols-2 row-cols-md-3 row-cols-xl-4 g-4">
        {% for object in anime_objects %}
            <div class="col d-flex justify-content-center">
                <div class="card h-75" style="width: 18rem;">
                    <div class="h-75 overflow-hidden">
                        <img src="{{ object.image }}" alt="" class="card-img-top">
                    </div>
                    <div class="card-body d-flex flex-column justify-content-around">
                        {{ btn(object.title, "/anime/#{object.id}", true) }}
                        <div class="buttons d-flex justify-content-between">
                            {{ btn("Картинка", "/anime/#{object.id}?show=image", true, "light") }}
                            {{ btn("Описание", "/anime/#{object.id}?show=info", true, "light") }}
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
